<%- include("header") -%>

<form method="post" action="/compose">
    <div class="form-group container">
      <label for="exampleInputEmail1">Title</label>
      <input type="text" class="form-control" name="title" placeholder="Your post title">
    </div>
    <div class="form-group container">
      <label>Description</label>
      <textarea class="form-control" name="description" placeholder="Write your post" rows="10"></textarea>
    </div>
    <div class="form-check container">
      <button type="submit" class="btn btn-primary mb-2">Publish</button>
    </div>
  </form>


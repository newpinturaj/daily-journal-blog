<%- include("header") -%>

<div class="container">
    <h1><%=title%></h1>
    <p class="text-justify"><%=description%></p>
</div>

<div class="container">
    <%posts.forEach(function(post){%>
      <h1><%=post.title%></h1>
      <p class="text-justify"><%=post.description.substring(0, 100)%>...<a href="/posts/<%=post.title%>">Read More</a></p>  
    <%})%>
</div>


